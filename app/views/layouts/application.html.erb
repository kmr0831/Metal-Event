<!DOCTYPE html>
<html>
  <head>
    <title>MetalEvent</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <nav class="navbar navbar-inverse navbar-static-top">
       <div class="container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" href="/">MetalEvent</a>
        </div>
        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
          <ul class="nav navbar-nav navbar-right">
            <% if user_signed_in? %>
              <li><a href="/events">イベント一覧</a></li>
              <li><a href="/events/new">イベント作成</a></li>
              <li><a href="/users/sign_out", data-method="delete">ログアウト</a></li>
            <% else %>
              <li><a href="/users/sign_up">サインアップ</a></li>
              <li><a href="/users/sign_in">ログイン</a></li>
            <% end %>
          </ul>
        </div>
       </div>
     </nav>
   </header>
    <!--<p class="notice devise-notice"><%#= notice %></p>-->
    <p class="alert devise-alert"><%= alert %></p>
    <%= yield %>
  </body>
</html>
